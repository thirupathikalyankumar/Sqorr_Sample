<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_border_header"
    android:orientation="vertical"
    android:paddingTop="1dp">

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:scrollbars="none">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardElevation="6dp"
            card_view:cardMaxElevation="10dp"
            card_view:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/second_status_bar_color">

                <com.vernos.sqorr.utilities.PresetRadioGroup
                    android:id="@+id/preset_time_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    app:presetRadioCheckedId="@+id/all">


                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/all"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="General"
                        app:presetButtonUnitTextColor="@color/black" />

                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/mlb"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Baseball"
                        app:presetButtonUnitTextColor="@color/black" />

                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/NCAAMB"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Basketball"
                        app:presetButtonUnitTextColor="@color/black" />

                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/NBA"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        android:visibility="gone"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Basketball"
                        app:presetButtonUnitTextColor="@color/black" />

                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/NFL"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Football"
                        app:presetButtonUnitTextColor="@color/black" />


                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/PGA"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Golf"
                        app:presetButtonUnitTextColor="@color/black" />

                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/NHL"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Hockey"
                        app:presetButtonUnitTextColor="@color/black" />

                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/NASCAR"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Motor"
                        app:presetButtonUnitTextColor="@color/black" />


                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/EPL"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Soccer"
                        app:presetButtonUnitTextColor="@color/black" />

                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/LA_LIGA"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        android:visibility="gone"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Soccer"
                        app:presetButtonUnitTextColor="@color/black" />


                    <com.vernos.sqorr.utilities.PresetValueButtonHow
                        android:id="@+id/mls"
                        style="@style/PresetLayoutButton"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="-10dp"
                        android:gravity="center"
                        android:visibility="gone"
                        app:presetButtonPressedTextColor="@color/white"
                        app:presetButtonUnitText="Soccer"
                        app:presetButtonUnitTextColor="@color/black" />


                </com.vernos.sqorr.utilities.PresetRadioGroup>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </HorizontalScrollView>


</LinearLayout>
