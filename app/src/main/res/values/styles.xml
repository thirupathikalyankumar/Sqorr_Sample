<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/hint</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="PresetLayoutButton">
        <item name="android:background">@drawable/background_selector_preset_button</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PresetLayoutButton_UnitText">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>
    </style>


    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- No need to override 'datePickerStyle' -->
        <!-- <item name="android:datePickerStyle">@style/MyDatePickerStyle</item> -->
    </style>


    <style name="CustomDialogTheme2" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="Style_TextView">
        <item name="fontFamily">@font/exo_regular</item>
    </style>


    <style name="Label_TextView">
        <item name="fontFamily">@font/exo_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>

    </style>

    <style name="Label_EditText">
        <item name="fontFamily">@font/exo_regular</item>
        <item name="android:textSize">@dimen/hint_font_size</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:layout_height">40.8dp</item>




    </style>

    <style name="Label_ViewLine">
        <item name="android:layout_height">@dimen/field_line</item>
        <item name="android:background">@color/field_line_color</item>
    </style>

    <style name="Label_ErrorTextView">
        <item name="fontFamily">@font/exo_bold</item>
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textColor">@color/error_text_color</item>
    </style>

    <style name="Label_ErrorViewLine">
        <item name="android:layout_height">@dimen/field_line</item>
        <item name="android:background">@color/error_text_color</item>
    </style>

    <style name="Label_ErrorView">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="fontFamily">@font/exo_bold</item>

    </style>


    <style name="popupMenuStyle1" >
        <item name="android:fontFamily">@font/exo_medium</item>
        <item name="android:textColor">#202020</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:dropDownListViewStyle">@style/DropDown.Theme</item>
    </style>
    <style name="DropDown.Theme" parent="ThemeOverlay.AppCompat">
        <item name="android:divider">#f2f2f2</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
